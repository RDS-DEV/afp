<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Client">

    <select id="selectClient" resultType="client">
        select ID, NAME from CLIENT where
        id = #{id}
    </select>

    <insert id="insertClient">
        insert into Agency (id, name)
        values (#{id}, #{name})
    </insert>

    <update id="updateClient">
        UPDATE AGENCY SET NAME = #{name} WHERE ID = #{id}
    </update>

    <delete id="deleteClient">
        DELETE FROM AGENCY WHERE ID = #{id}
    </delete>

    <select id="selectAllClients" resultType="Client">
        select * from Client
    </select>



</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Policy">

    <select id="selectPolicy" resultType="policy">
        select ID, NAME from Policy where
        id = #{id}
    </select>

    <insert id="insertPolicy">
        insert into Agency (id, name)
        values (#{id}, #{name})
    </insert>

    <update id="updatePolicy">
        UPDATE AGENCY SET NAME = #{name} WHERE ID = #{id}
    </update>

    <delete id="deletePolicy">
        DELETE FROM AGENCY WHERE ID = #{id}
    </delete>

    <select id="selectAllPolicies" resultType="Policy">
        select * from Policy
    </select>



</mapper>
